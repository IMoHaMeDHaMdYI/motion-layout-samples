<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/plateMotionLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    motion:layoutDescription="@xml/plate_activity_scene"
    tools:context=".secondsample.PlateSampleActivity">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addPlate"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="40dp" />

    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Baby Add"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/platesRv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        motion:layout_constraintBottom_toBottomOf="@id/addPlate"
        motion:layout_constraintEnd_toStartOf="@id/addPlate"
        motion:layout_constraintStart_toStartOf="parent"
        motion:layout_constraintTop_toTopOf="@id/addPlate">

    </androidx.recyclerview.widget.RecyclerView>
</androidx.constraintlayout.motion.widget.MotionLayout>