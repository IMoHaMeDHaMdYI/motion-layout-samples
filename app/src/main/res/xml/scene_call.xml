<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">
    <Transition
        motion:constraintSetEnd="@+id/end_state"
        motion:constraintSetStart="@+id/start_state"
        motion:duration="1500">
        <OnSwipe
            motion:dragDirection="dragUp"
            motion:touchAnchorId="@id/v"
            motion:touchAnchorSide="top" />
    </Transition>
    <ConstraintSet android:id="@+id/start_state">
        <Constraint
            android:id="@id/tv"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="Hello Word"
            android:textColor="@android:color/white">
            <CustomAttribute
                motion:attributeName="textSize"
                motion:customDimension="30sp"
                />
        </Constraint>
        <Constraint
            android:id="@id/v"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/colorAccent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/tv">

        </Constraint>
    </ConstraintSet>
    <ConstraintSet android:id="@+id/end_state">
        <Constraint
            android:id="@id/tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="Hello Word"
            android:textSize="10sp"
            android:textColor="@android:color/white">

            <CustomAttribute
                motion:attributeName="textSize"
                motion:customDimension="10sp"
                />
        </Constraint>
        <Constraint

            android:id="@id/v"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/colorAccent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/tv">

        </Constraint>
    </ConstraintSet>
</MotionScene>