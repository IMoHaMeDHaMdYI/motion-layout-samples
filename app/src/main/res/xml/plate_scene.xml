<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">
    <Transition
        motion:constraintSetEnd="@+id/plate_end"
        motion:constraintSetStart="@+id/plate_start"
        motion:duration="1000"
        motion:interpolator="bounce" />
    <ConstraintSet android:id="@+id/plate_start">
        <Constraint
            android:id="@id/img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:rotation="90" />
    </ConstraintSet>
    <ConstraintSet android:id="@+id/plate_end">
        <Constraint
            android:id="@id/img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:rotation="0" />
    </ConstraintSet>
</MotionScene>